index # admin

<h1><%= current_user.name %>のページ</h1>

<p>メールアドレス: <%= current_user.email %></p>

<%= link_to  "ユーザー作成", new_admin_user_path %>

<h3>ユーザー一覧</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>タスク数</th>
      <th>管理権限</th>
      <th>ユーザー更新</th>
      <th>ユーザー削除</th>
    </tr>
  </thead>
  <tbody>

    <% @users.each do |user|%>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to "詳細", user, class: "btn btn-outline-primary" %>
        <td><%= link_to "編集", edit_admin_user_path(user), class: "btn btn-outline-success" %></td>
        <td><%= link_to "削除", user, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
</table>